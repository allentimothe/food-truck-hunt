<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= movie.title %></div>
  <div>Release Year: </div>
  <div><%= movie.releaseYear %></div>
  <div>Rating: </div>
  <div><%= movie.mpaaRating %></div>
  <div>Now Showing: </div>
  <div><%= movie.nowShowing ? 'Yes' : 'Nope' %></div>
  <!-- Display all cast members associated with this movie-->
  <div>Cast:</div>
  <ul>
    <% movie.cast.forEach(function(p) { %>
      <li><%= p.name %> <small><%= p.born %></small></li>
    <% }); %>
  </ul>
</section>
<!-- Allow user to associate performers not already in this movie to cast -->
<form action="/movies/<%= movie._id %>/performers" method="post" id="add-per-to-cast">
  <select name="performerId">
    <% performers.forEach(function(p) {%>
      <option value="<%= p._id %>"></option> 
    <% }) %>
  </select>
  <button type="submit">Add to Cast</button>
</form>
<h2>Reviews</h2>

<% if (movie.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <!--First let's set up a total variable -->
      <% let total = 0 %>  
      <% movie.reviews.forEach(function(r) { %>
         <!-- We'll aggregate the total ratings -->
        <% total += r.rating %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
      <% }); %>
      <!-- Divide total by num reviews to show our average rating ðŸ‘‡ðŸ˜„ -->
      <tr>
        <td colspan="2"></td>
        <td><strong><%= (total / movie.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<h2>Add a review:</h2>
<form
  id="add-review-form"
  method="POST"
  action="/movies/<%= movie._id %>/reviews"
>
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review" />
</form>

<%- include('../partials/footer') %>
